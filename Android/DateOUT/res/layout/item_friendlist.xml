<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="90dp"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_charater_catalog"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:background="@color/theme_backgroud"
        android:paddingBottom="3dip"
        android:paddingLeft="5dip"
        android:paddingTop="3dip"
        android:textColor="#454545" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <!-- 用户列表项 -->

        <ImageView
            android:id="@+id/headImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/default_head" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="老张"
                    android:textColor="@color/black_font"
                    android:textSize="22sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/onlineStatusTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="left|center"
                    android:paddingLeft="5dp"
                    android:text="[在线]"
                    android:textColor="@color/light_gray_font"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/extendedTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="最美的不是下雨天"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/light_gray_font"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>